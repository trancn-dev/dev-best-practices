      "use App\\Http\\Controllers\\Controller;",
      "use App\\Http\\Requests\\${3:StoreRequest};",
      "use App\\Http\\Requests\\${4:UpdateRequest};",
      "use App\\Http\\Resources\\${5:Resource};",
      "use App\\Http\\Resources\\${5:Resource}Collection;",
      "use App\\Models\\${6:Model};",
      "use Illuminate\\Http\\JsonResponse;",
      "use Illuminate\\Http\\Request;",
      "",
      "/**",
      " * ${7:Controller description}",
      " *",
      " * @package App\\Http\\Controllers\\Api\\V1",
      " */",
      "class ${8:ControllerName} extends Controller",
      "{",
      "    /**",
      "     * Display a listing of the resource.",
      "     */",
      "    public function index(Request \\$request): ${5:Resource}Collection",
      "    {",
      "        \\$items = ${6:Model}::query()",
      "            ->paginate(\\$request->input('per_page', 15));",
      "",
      "        return new ${5:Resource}Collection(\\$items);",
      "    }",
      "",
      "    /**",
      "     * Store a newly created resource.",
      "     */",
      "    public function store(",
      "        ${3:StoreRequest} \\$request,",
      "        ${2:ActionName} \\$action",
      "    ): JsonResponse {",
      "        \\$item = \\$action->execute(\\$request->validated());",
      "",
      "        return response()->json(",
      "            new ${5:Resource}(\\$item),",
      "            201",
      "        );",
      "    }",
      "",
      "    /**",
      "     * Display the specified resource.",
      "     */",
      "    public function show(${6:Model} \\$${9:model}): ${5:Resource}",
      "    {",
      "        return new ${5:Resource}(\\$${9:model});",
      "    }",
      "",
      "    /**",
      "     * Update the specified resource.",
      "     */",
      "    public function update(",
      "        ${4:UpdateRequest} \\$request,",
      "        ${6:Model} \\$${9:model}",
      "    ): JsonResponse {",
      "        \\$${9:model}->update(\\$request->validated());",
      "",
      "        return response()->json(",
      "            new ${5:Resource}(\\$${9:model})",
      "        );",
      "    }",
      "",
      "    /**",
      "     * Remove the specified resource.",
      "     */",
      "    public function destroy(${6:Model} \\$${9:model}): JsonResponse",
      "    {",
      "        \\$${9:model}->delete();",
      "",
      "        return response()->json(null, 204);",
      "    }",
      "}",
