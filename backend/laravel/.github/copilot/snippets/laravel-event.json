{
  "Laravel Event": {
    "prefix": "event",
    "body": [
      "<?php",
      "",
      "declare(strict_types=1);",
      "",
      "namespace App\\Events;",
      "",
      "use App\\Models\\${1:Model};",
      "use Illuminate\\Broadcasting\\InteractsWithSockets;",
      "use Illuminate\\Foundation\\Events\\Dispatchable;",
      "use Illuminate\\Queue\\SerializesModels;",
      "",
      "/**",
      " * ${2:Event description}",
      " *",
      " * @package App\\Events",
      " */",
      "class ${3:EventName}",
      "{",
      "    use Dispatchable, InteractsWithSockets, SerializesModels;",
      "",
      "    /**",
      "     * Create a new event instance.",
      "     */",
      "    public function __construct(",
      "        public ${1:Model} \\$${4:model}",
      "    ) {}",
      "}",
      ""
    ],
    "description": "Create a Laravel Event"
  },
  "Laravel Listener": {
    "prefix": "listener",
    "body": [
      "<?php",
      "",
      "declare(strict_types=1);",
      "",
      "namespace App\\Listeners;",
      "",
      "use App\\Events\\${1:EventName};",
      "use Illuminate\\Contracts\\Queue\\ShouldQueue;",
      "use Illuminate\\Queue\\InteractsWithQueue;",
      "",
      "/**",
      " * ${2:Listener description}",
      " *",
      " * @package App\\Listeners",
      " */",
      "class ${3:ListenerName} implements ShouldQueue",
      "{",
      "    use InteractsWithQueue;",
      "",
      "    /**",
      "     * Handle the event.",
      "     */",
      "    public function handle(${1:EventName} \\$event): void",
      "    {",
      "        ${4:// Implementation}",
      "    }",
      "}",
      ""
    ],
    "description": "Create a Laravel Event Listener"
  },
  "Dispatch Event": {
    "prefix": "event-dispatch",
    "body": [
      "event(new ${1:EventName}(\\$${2:model}));"
    ],
    "description": "Dispatch an event"
  }
}
