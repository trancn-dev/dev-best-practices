{
  "Laravel Feature Test": {
    "prefix": "test-feature",
    "body": [
      "<?php",
      "",
      "declare(strict_types=1);",
      "",
      "namespace Tests\\Feature;",
      "",
      "use App\\Models\\${1:Model};",
      "use Illuminate\\Foundation\\Testing\\RefreshDatabase;",
      "use Tests\\TestCase;",
      "",
      "/**",
      " * ${2:Test description}",
      " */",
      "class ${3:TestName} extends TestCase",
      "{",
      "    use RefreshDatabase;",
      "",
      "    /**",
      "     * ${4:Test method description}",
      "     */",
      "    public function test_${5:it_does_something}(): void",
      "    {",
      "        // Arrange",
      "        ${6:// Setup test data}",
      "",
      "        // Act",
      "        \\$response = \\$this->${7:getJson}('${8:/api/v1/endpoint}');",
      "",
      "        // Assert",
      "        \\$response->assert${9:Ok}();",
      "    }",
      "}",
      ""
    ],
    "description": "Create a Laravel Feature Test"
  },
  "Laravel Unit Test": {
    "prefix": "test-unit",
    "body": [
      "<?php",
      "",
      "declare(strict_types=1);",
      "",
      "namespace Tests\\Unit;",
      "",
      "use App\\${1:Actions}\\${2:ClassName};",
      "use PHPUnit\\Framework\\TestCase;",
      "",
      "/**",
      " * ${3:Test description}",
      " */",
      "class ${4:TestName} extends TestCase",
      "{",
      "    /**",
      "     * ${5:Test method description}",
      "     */",
      "    public function test_${6:it_does_something}(): void",
      "    {",
      "        // Arrange",
      "        \\$instance = new ${2:ClassName}();",
      "        ${7:// Setup test data}",
      "",
      "        // Act",
      "        \\$result = \\$instance->${8:method}();",
      "",
      "        // Assert",
      "        \\$this->assert${9:Equals}(${10:expected}, \\$result);",
      "    }",
      "}",
      ""
    ],
    "description": "Create a Laravel Unit Test"
  },
  "Test with Factory": {
    "prefix": "test-factory",
    "body": [
      "/**",
      " * ${1:Test description}",
      " */",
      "public function test_${2:it_does_something}(): void",
      "{",
      "    // Arrange",
      "    \\$${3:model} = ${4:Model}::factory()->create([",
      "        '${5:attribute}' => '${6:value}',",
      "    ]);",
      "",
      "    // Act",
      "    ${7:// Action}",
      "",
      "    // Assert",
      "    \\$this->assertDatabaseHas('${8:table}', [",
      "        '${9:column}' => ${10:value},",
      "    ]);",
      "}",
      ""
    ],
    "description": "Test method with factory"
  }
}
