{
  "Laravel Repository Interface": {
    "prefix": "repository-interface",
    "body": [
      "<?php",
      "",
      "declare(strict_types=1);",
      "",
      "namespace App\\Repositories\\Contracts;",
      "",
      "use App\\Models\\${1:Model};",
      "use Illuminate\\Database\\Eloquent\\Collection;",
      "",
      "/**",
      " * ${2:Repository description}",
      " *",
      " * @package App\\Repositories\\Contracts",
      " */",
      "interface ${1:Model}RepositoryInterface",
      "{",
      "    /**",
      "     * Get all ${3:items}.",
      "     */",
      "    public function all(): Collection;",
      "",
      "    /**",
      "     * Find ${4:item} by ID.",
      "     */",
      "    public function findById(int \\$id): ?${1:Model};",
      "",
      "    /**",
      "     * Create a new ${4:item}.",
      "     */",
      "    public function create(array \\$data): ${1:Model};",
      "",
      "    /**",
      "     * Update ${4:item}.",
      "     */",
      "    public function update(${1:Model} \\$${5:model}, array \\$data): ${1:Model};",
      "",
      "    /**",
      "     * Delete ${4:item}.",
      "     */",
      "    public function delete(${1:Model} \\$${5:model}): bool;",
      "}",
      ""
    ],
    "description": "Create a Repository Interface"
  },
  "Laravel Repository": {
    "prefix": "repository",
    "body": [
      "<?php",
      "",
      "declare(strict_types=1);",
      "",
      "namespace App\\Repositories;",
      "",
      "use App\\Models\\${1:Model};",
      "use App\\Repositories\\Contracts\\${1:Model}RepositoryInterface;",
      "use Illuminate\\Database\\Eloquent\\Collection;",
      "",
      "/**",
      " * ${2:Repository description}",
      " *",
      " * @package App\\Repositories",
      " */",
      "class ${1:Model}Repository implements ${1:Model}RepositoryInterface",
      "{",
      "    /**",
      "     * Get all ${3:items}.",
      "     */",
      "    public function all(): Collection",
      "    {",
      "        return ${1:Model}::all();",
      "    }",
      "",
      "    /**",
      "     * Find ${4:item} by ID.",
      "     */",
      "    public function findById(int \\$id): ?${1:Model}",
      "    {",
      "        return ${1:Model}::find(\\$id);",
      "    }",
      "",
      "    /**",
      "     * Create a new ${4:item}.",
      "     */",
      "    public function create(array \\$data): ${1:Model}",
      "    {",
      "        return ${1:Model}::create(\\$data);",
      "    }",
      "",
      "    /**",
      "     * Update ${4:item}.",
      "     */",
      "    public function update(${1:Model} \\$${5:model}, array \\$data): ${1:Model}",
      "    {",
      "        \\$${5:model}->update(\\$data);",
      "        return \\$${5:model};",
      "    }",
      "",
      "    /**",
      "     * Delete ${4:item}.",
      "     */",
      "    public function delete(${1:Model} \\$${5:model}): bool",
      "    {",
      "        return \\$${5:model}->delete();",
      "    }",
      "}",
      ""
    ],
    "description": "Create a Repository class"
  },
  "Repository Method": {
    "prefix": "repository-method",
    "body": [
      "/**",
      " * ${1:Method description}",
      " */",
      "public function ${2:methodName}(${3:}): ${4:mixed}",
      "{",
      "    ${5:// Implementation}",
      "}",
      ""
    ],
    "description": "Add repository method"
  }
}
