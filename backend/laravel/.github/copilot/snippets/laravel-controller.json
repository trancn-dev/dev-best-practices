{
  "Laravel Controller": {
    "prefix": "controller",
    "body": [
      "<?php",
      "",
      "declare(strict_types=1);",
      "",
      "namespace App\\Http\\Controllers;",
      "",
      "use App\\Models\\${1:Model};",
      "use App\\Services\\${1:Model}Service;",
      "use App\\Http\\Requests\\Create${1:Model}Request;",
      "use App\\Http\\Requests\\Update${1:Model}Request;",
      "use Illuminate\\Http\\RedirectResponse;",
      "use Illuminate\\View\\View;",
      "",
      "/**",
      " * ${2:Controller description}",
      " *",
      " * @package App\\Http\\Controllers",
      " */",
      "class ${1:Model}Controller extends Controller",
      "{",
      "    /**",
      "     * Constructor",
      "     */",
      "    public function __construct(",
      "        private ${1:Model}Service \\$service",
      "    ) {}",
      "",
      "    /**",
      "     * Display a listing of the resource.",
      "     */",
      "    public function index(): View",
      "    {",
      "        \\$items = ${1:Model}::paginate(15);",
      "        return view('${3:view_path}.index', compact('items'));",
      "    }",
      "",
      "    /**",
      "     * Show the form for creating a new resource.",
      "     */",
      "    public function create(): View",
      "    {",
      "        return view('${3:view_path}.create');",
      "    }",
      "",
      "    /**",
      "     * Store a newly created resource.",
      "     */",
      "    public function store(Create${1:Model}Request \\$request): RedirectResponse",
      "    {",
      "        \\$item = \\$this->service->create(\\$request->validated());",
      "        ",
      "        return redirect()->route('${3:view_path}.show', \\$item)",
      "            ->with('success', '${1:Model} created successfully.');",
      "    }",
      "",
      "    /**",
      "     * Display the specified resource.",
      "     */",
      "    public function show(${1:Model} \\$${4:model}): View",
      "    {",
      "        return view('${3:view_path}.show', compact('${4:model}'));",
      "    }",
      "",
      "    /**",
      "     * Show the form for editing the specified resource.",
      "     */",
      "    public function edit(${1:Model} \\$${4:model}): View",
      "    {",
      "        return view('${3:view_path}.edit', compact('${4:model}'));",
      "    }",
      "",
      "    /**",
      "     * Update the specified resource.",
      "     */",
      "    public function update(",
      "        Update${1:Model}Request \\$request,",
      "        ${1:Model} \\$${4:model}",
      "    ): RedirectResponse {",
      "        \\$this->service->update(\\$${4:model}, \\$request->validated());",
      "        ",
      "        return redirect()->route('${3:view_path}.show', \\$${4:model})",
      "            ->with('success', '${1:Model} updated successfully.');",
      "    }",
      "",
      "    /**",
      "     * Remove the specified resource.",
      "     */",
      "    public function destroy(${1:Model} \\$${4:model}): RedirectResponse",
      "    {",
      "        \\$this->service->delete(\\$${4:model});",
      "        ",
      "        return redirect()->route('${3:view_path}.index')",
      "            ->with('success', '${1:Model} deleted successfully.');",
      "    }",
      "}",
      ""
    ],
    "description": "Create a Laravel Controller with CRUD methods"
  },
  "Controller Method": {
    "prefix": "controller-method",
    "body": [
      "/**",
      " * ${1:Method description}",
      " */",
      "public function ${2:methodName}(${3:Request \\$request}): ${4:View}",
      "{",
      "    ${5:// Implementation}",
      "}",
      ""
    ],
    "description": "Create a controller method"
  },
  "Resource Controller": {
    "prefix": "controller-resource",
    "body": [
      "Route::resource('${1:resource}', ${2:Controller}::class)",
      "    ->middleware(['auth']);"
    ],
    "description": "Define a resource route"
  }
}
