{
  "name": "API Composable",
  "description": "Composable for API data fetching",
  "body": [
    "export const use${1:Resource} = (${2:id}: MaybeRef<string | number>) => {",
    "  const { data, pending, error, refresh } = useFetch(() => `/api/${3:endpoint}/${unref(${2:id})}`, {",
    "    key: `${3:endpoint}-${unref(${2:id})}`,",
    "  })",
    "",
    "  const update = async (payload: ${4:Type}) => {",
    "    await $fetch(`/api/${3:endpoint}/${unref(${2:id})}`, {",
    "      method: 'PUT',",
    "      body: payload",
    "    })",
    "    await refresh()",
    "  }",
    "",
    "  const remove = async () => {",
    "    await $fetch(`/api/${3:endpoint}/${unref(${2:id})}`, {",
    "      method: 'DELETE'",
    "    })",
    "  }",
    "",
    "  return {",
    "    data,",
    "    pending,",
    "    error,",
    "    refresh,",
    "    update,",
    "    remove",
    "  }",
    "}"
  ]
}
